<h1>Detail</h1>

 <%= link_to edit_task_path(@task), class: "text-black" do %>
    <i class="fa-solid fa-pen-to-square"></i>
  <% end %>

 <%= link_to destroy_task_path(@task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-black" do %>
    <i class="fa-solid fa-trash"></i>

  <% end %>

<h2><%= @task.title %> </h2>
<p><%= @task.details %></p>

<%= link_to "Back to tasks", tasks_path %>
